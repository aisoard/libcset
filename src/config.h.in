#ifndef CONFIG_H
#define CONFIG_H

/**
 * \file
 * \brief Contains options defined at configuration.
 * \author Alexandre Isoard <alexandre.isoard@gmail.com>
 *
 * Those macros are defined by the \c configure script.
 */

/// \brief Name of package
#define PACKAGE "@PACKAGE@"

/// \brief Version of this package.
#define VERSION "@VERSION@"

/// \brief Full name of this package.
#define FULL_NAME "@PACKAGE_NAME@"

/// \brief Home page for this package.
#define URL "@PACKAGE_URL@"

/// \brief Address where bug reports for this package should be sent.
#define EMAIL "@PACKAGE_BUGREPORT@"

#endif
